{% extends 'layouts/app.twig' %}

{% block title %}
    - Login User
{% endblock %}

{% block content %}
    <div class="container pt-4 pb-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                {% for label, messages in flash_all() %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {% for message in messages %}
                            <strong>{{ label|capitalize(1) }}!</strong> {{ message }}
                        {% endfor %}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
                <div class="card">
                    <div class="card-header bg-dark text-white text-center">Login</div>
                    <div class="card-body">
                        <form method="POST">
                            {{ csrf()|raw }}
                            <div class="row mb-3">
                                <label for="identifier" class="col-md-4 col-form-label">Username or E-Mail Address</label>
                                <div class="col-md-6">
                                    <input id="identifier" type="text" class="form-control{% if has_error('identifier') %} is-invalid {% endif %}" name="identifier" value="{{ old('identifier') }}" autocomplete="identifier">

                                    {% if has_error('identifier') %}
                                        <span class="invalid-feedback" role="alert">
                                            <strong>{{ get_error('identifier') }}</strong>
                                        </span>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label for="password" class="col-md-4 col-form-label">Password</label>
                                <div class="col-md-6">
                                    <input id="password" type="password" class="form-control{% if has_error('password') %} is-invalid {% endif %}" name="password" autocomplete="new-password">

                                    {% if has_error('password') %}
                                        <span class="invalid-feedback" role="alert">
                                            <strong>{{ get_error('password') }}</strong>
                                        </span>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 offset-md-4">
                                    <button type="submit" class="btn btn-dark">Login</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
